<footer class="bg-dark pt-2">
	<div
		class="container">
		<!-- Widgets START -->
		<div class="row pt-5">
			<!-- Footer Widget -->
			<div class="col-md-6 col-lg-3 mb-4">
				<h5 class="mb-4 text-white text-decoration-underline">Consulter nos derniers articles</h5>
				<!--début de la boucle des articles-->
					{% for article in articleController| slice (0,2) %}
						<div class="mb-4 position-relative">
							<a href="{{path ('app_article_index', {'slug':article.slug})}}" class="btn-link text-white fw-normal">{{ article.titre }}</a>
								<ul class="nav nav-divider align-items-center small mt-2 text-muted">	
									<li class="nav-item position-relative">
										<div class="nav-link">
											<a href="{{path('app_article_index', {'slug':article.slug})}}" class="stretched-link text-reset btn-link"> {{ article.contenu| striptags| u.truncate(50,"...",false)|raw }}</a>
										</div>
									</li>
								</ul>
						</div>
					{% endfor %}
			</div>
					

			<!-- Footer Widget -->
			<div class="col-md-6 col-lg-3 mb-4">
				<h5 class="mb-4 text-white text-decoration-underline">Navigation par catégories</h5>
				
				<div class="row">
					<div class="col-6">
						<ul class="nav flex-column text-primary-hover">
						{% for categorie in categoryService.getNotInMenuCategories %}	
							<li class="nav-item">
									<a class="nav-link pt-0" href="{{path('app_category_index', {'slug':categorie.slug})}}">{{ categorie.nom }}</a>
							</li>
						{% endfor %}
						{% for categorie in categoryService.getInMenuCategories %}
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_category_index', {'slug': categorie.slug})}}" class="nav-link dropdown-toggle" id="{{ categorie.slug }}"></a>
							</li>
						{% endfor %}
						</ul>
					</div>
				</div>
			</div>

			<!-- Footer Widget -->
			<div class="col-sm-6 col-lg-3 mb-4">
				<h5 class="mb-4 text-white text-decoration-underline">Contacter-nous</h5>
				<ul class="nav flex-column text-primary-hover">
					<li class="nav-item my-2">
						<a class="btn-link text-white fw-normal" href=" {{path('app_contact')}} ">
							<i class="bi bi-envelope mx-2"></i>Contact</a>
					</li>
					<li class="nav-item my-2">
						<a class="btn-link text-white fw-normal pt-0" href=" {{path ('app_login_linkedin')}} ">
							<i class="bi bi-linkedin mx-2"></i></i>LinkedIn</a>
					</li>
					<li class="nav-item my-2">
						<a class="btn-link text-white fw-normal" href=" {{path ('app_newsletter')}} ">
							<i class="bi bi-newspaper mx-2"></i></i>Newsletters</a>
					</li>
				</ul>
			</div>

			<!-- Footer Widget -->
			<div class="col-sm-6 col-lg-3 mb-4">
				<div class="col">
					<a href="{{path ('app_home') }}"><img class="w-100" src="{{ asset ('images/logo.png')| imagine_filter ('logo')}}" alt="logo" style="height: 250px;"></a>
				</div>
			</div>
		</div>
		<!-- Widgets END -->
	</div>

