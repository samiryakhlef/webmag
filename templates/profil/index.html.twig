{% extends "base.html.twig" %}

	{% block body %}
		<!-- =======================
				Profil présentation START -->
		{% for profil in profils %}
			<section class="pt-4">
				<div class="container">
					<div class="row">
						<div
							class="col-12">
							<!-- info profil START -->
							<div
								class="bg-primary-soft d-md-flex p-3 p-sm-4 my-3 text-center text-md-start rounded">
								<!-- Avatar -->
								<div class=" me-0 me-md-4">
									<div class="avatar avatar-xxl">
										<img class="avatar-img rounded-circle" src="https://picsum.photos/200" alt="avatar">
									</div>
									<!-- Post count -->
									<div
										class="text-center mt-n3 position-relative">

										<!--contribution de l'utilisateur-->
										<span class="badge bg-danger fs-6">
											{{ app.user.contribution }}
										</span>
									</div>
								</div>
								<!-- Info -->
								<div>
									<!--contribution de l'utilisateur-->
									<h2 class="m-0">
										{{ app.user.pseudo }}
									</h2>
									<ul class="list-inline">
										<li class="list-inline-item">
											<i class="bi bi-person-fill me-1"></i>
											<!--Nom et Prénom de l'utilisateur-->
											{{ app.user.nom }}
											{{ app.user.prenom }}
										</li>
										<li class="list-inline-item">
											<i class="bi bi-envelope-check"></i>
											{{ app.user.email }}
										</li>
									</ul>
									<p class="my-2">
										{{ app.user.aPropos }}
									</p>
									<!-- Social icons -->
									<ul class="nav justify-content-center justify-content-md-start">
										<li class="nav-item">
											<a class="nav-link ps-0 pe-2 fs-5" href="#">
												<i class="bi bi-facebook"></i>
											</a>
										</li>
										<li class="nav-item">
											<a class="nav-link px-2 fs-5" href="#">
												<i class="bi bi-twitter"></i>
											</a>
										</li>
										<li class="nav-item">
											<a class="nav-link px-2 fs-5" href="#">
												<i class="bi bi-linkedin"></i>
											</a>
										</li>
									</ul>
								</div>
							</div>
							<!-- info profil  END -->
						</div>
					</div>
				</div>
			</section>

			<!-- =======================
						Profil présentation END -->

			<!-- =======================
						Main content START -->
			<section class="position-relative pt-0">
				<div class="container">
					<div class="row">
						<div class="col-12 mb-3">
							<h2>
								{{ app.user.prenom }}
								{{ app.user.nom }}
								à publié:
							</h2>
						</div>
						<!-- Article posté par le profil START -->
						<div class="col-12">
							<div
								class="row gy-4">

								<!-- Article  START -->
								<!--je boucle sur mes articles paginés -->
								{% for article in paginations %}
									{% for article in app.user.article %}
									<div class="col-sm-6 col-lg-4">
										<div
											class="card">
											<!-- img -->
											<div class="position-relative">
												<img class="card-img" src="https://picsum.photos/200" alt="Card image">
												<div
													class="card-img-overlay d-flex align-items-start flex-column p-3">
													<!-- Card overlay bottom -->
													<div
														class="w-100 mt-auto">
														<!-- Catégorie-->
														<a href="#" class="badge bg-warning mb-2">
															<i class="fas fa-circle me-2 small fw-bold"></i>Catégorie</a>
													</div>
												</div>
											</div>
											<div class="card-body px-0 pt-3">
												<h4 class="card-title">
													<a href="post-single-3.html" class="btn-link text-reset fw-bold">
														{{article.titre}}
													</a>
												</h4>
												<p class="card-text">
													{{article.contenu}}
												</p>
												<!-- Information de l'article -->
												<ul class="nav nav-divider align-items-center d-none d-sm-inline-block">
													<li class="nav-item">
														<div class="nav-link">
															<div class="d-flex align-items-center position-relative">
																<div class="avatar avatar-xs"></div>
																<span class="ms-3">Par
																	<a href="#" class="stretched-link text-reset btn-link">
																		{{ app.user.nom }}
																		{{ app.user.prenom }}
																	</a>
																</span>
															</div>
														</div>
													</li>
													<li class="nav-item">
														{{article.createdAt|date('d/m/Y')}}
													</li>
												</ul>
											</div>
										</div>
									</div>
									<!-- Article posté par le profil END -->
								{% endfor %}
							{% endfor %}
							</div>
						</div>
						<!-- Main Post END -->
					</div>
					<!-- Row end -->
				</div>
				<!--fin de la boucle profil-->
			{% endfor %}
		</section>
		<!-- Main content END -->

	<!--Button pagination START -->
	<div class="container-fluid pagination justify-content-center my-3">
		{{ knp_pagination_render(paginations,'base/pagination.html.twig') }}
	</div>
	<!--Button pagination END -->
	</html>
</main>
{% endblock %}
